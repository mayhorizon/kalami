# Application
APP_NAME=Kalami
APP_VERSION=0.1.0
DEBUG=True

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=postgresql://kalami:kalami@localhost/kalami

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Services - FREE OPTIONS (Recommended for zero cost)
# Set providers to use 100% free local models
STT_PROVIDER=whisper-local
LLM_PROVIDER=ollama
TTS_PROVIDER=piper

# FREE Model Configuration
WHISPER_MODEL_SIZE=base
OLLAMA_MODEL=llama3.2:3b
PIPER_VOICES_DIR=./models/piper_voices

# AI Services API Keys (OPTIONAL - only if using paid services)
# Leave empty if using free local models
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
ASSEMBLYAI_API_KEY=
ELEVENLABS_API_KEY=

# PAID Service Providers (optional, comment out if using free)
# STT_PROVIDER=openai
# LLM_PROVIDER=openai
# TTS_PROVIDER=openai

# PAID Model Configuration (optional)
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-opus-20240229

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Supported Languages (comma-separated)
SUPPORTED_LANGUAGES=es,fr,de
