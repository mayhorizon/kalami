# Kalami Backend Configuration
# Copy this file to .env and fill in your actual API keys

# Application Settings
APP_NAME=Kalami
DEBUG=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./kalami.db

# JWT Authentication
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Speech-to-Text (OpenAI Whisper)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
WHISPER_MODEL=whisper-1

# Text-to-Speech (ElevenLabs)
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_multilingual_v2

# LLM for Conversation (Anthropic Claude or OpenAI)
# Get your Anthropic key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_MODEL=gpt-4o

# Alternative STT: Deepgram (optional)
# Get your API key from: https://deepgram.com/
# DEEPGRAM_API_KEY=your-deepgram-api-key-here
